<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@android:color/holo_blue_dark"
    card_view:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <TextView
            android:id="@+id/added_title_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/added_year_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_title_id"
            android:layout_alignStart="@+id/added_title_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />


        <TextView
            android:id="@+id/added_country_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_year_id"
            android:layout_alignStart="@+id/added_year_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/added_genre_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_country_id"
            android:layout_alignStart="@+id/added_country_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/added_cost_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_genre_id"
            android:layout_alignStart="@+id/added_genre_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/added_keywords_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_cost_id"
            android:layout_alignStart="@+id/added_cost_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/added_costUSD_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/added_keywords_id"
            android:layout_alignStart="@+id/added_keywords_id"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>